.hentry
  %h4.entry-title{:id=>"post_#{ message.id}"}
    = link_to message.title, user_short_message_path(message.user, message), :rel => 'bookmark'

  .vcard.author
    %h5
      %a{:href=>"#{user_post_path(post.user, post)}", :class=>"photo", :rel=>"bookmark"}
        =image_tag((post.first_image_in_body || post.user.avatar_photo_url(:thumb)), :alt=>"", :width=>"50", :height=>"50")

    %ul
      %li.fn=link_to message.user.login, user_path(message.user)
      %li.update
        %a{:href=>"#{user_short_message_path(message.user, message)}", :rel=>"bookmark"}
          %abbr.published{:title=>"#{message.published_at}"}= message.published_at_display(:short_literal_date)
      %li.view
        = :view_count.l
        = "(#{message.view_count})"
      %li.comments
        = link_to :comments.l+" (#{message.comments.count})", user_short_message_path(message.user, message)+'#comments'
      - if current_user and current_user.can_request_friendship_with(message.user)
        %li.addfriend= add_friend_link(message.user)

  .entry-content
    = truncate_words(message.message, 75, '...' )
    
    %h6=link_to :read_more.l, user_short_message_path(message.user, message), :rel=> 'bookmark'

