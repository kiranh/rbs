=javascript_include_tag 'jquery.ddown'
=javascript_include_tag 'jquery.validate'
:javascript
  jQuery(document).ready(function() {
      jQuery('select').customStyle();
      jQuery(".btn").hover(function() {
          jQuery(this).addClass("hover");
      }, function() {
          jQuery(this).removeClass("hover");
      });

      jQuery("input.field").focus(function() {
          jQuery(this).next().show();
      });
      jQuery("input.field").blur(function() {
          jQuery(this).next().hide();
      });
      jQuery("#form").validate();
  });
.main-container
  .left-section
    .stretch
      .nav
        %ul
          %li
            %a.connect.current{:href => "#"} Connect
          %li
            %a.share{:href => "#"} Share
          %li
            %a.search{:href => "#"} Search
          %li
            %a.manage{:href => "#"} Manage
      .banner
        .banner-text
          %p
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas non dui eu ipsum

            egestas vehicula eu ac eros.
          %input{:onclick => "location.href='/signup'", :src => "/assets/btn_getstarted.png", :type => "image"}/
  .right-section
    .logo
      %a{:href => "#"}
        %img{:alt => "Collaborate", :height => "69", :src => "/assets/logo.png", :title => "logo", :width => "251"}/
      %h1
        New to Collaborate?
        %a{:href => "/signup"} Sign Up
    = form_tag sessions_path, :id => "form" do
      .login-box
        .row
          %label Username:
          .rel
            = text_field_tag 'login', params[:login], :id => "username", :class => "text field required"
            %span.tip Enter Username
            %span.loginpopup Enter Valid Username
        .row
          %label Password:
          .rel
            %input.text.field{:name => "password", :type => "password"}
            %span.loginpopup Enter Valid Password
            %span.tip Enter password
        .spacerdiv
        .row
          %label &nbsp;
          %input.btn.loginbtn.1thickbox{:alt => "#TB_inline?height=320&width=300&inlineId=myOnPageContent", :title => "Import Contacts", :type => "submit", :value => "Login"}/
  .spacerdiv