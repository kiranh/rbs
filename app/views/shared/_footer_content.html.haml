=javascript_include_tag 'jquery.ddown'
:javascript
  jQuery(document).ready(function() {
      jQuery(".btn").hover(function() {
          jQuery(this).addClass("hover");
      }, function() {
          jQuery(this).removeClass("hover");
      });
  });

.yui-u.first
  -box :class => "fresh" do 
    %h3=:whats_fresh.l
    - @recent_activity.each do |activity|
      =render :partial => "activities/activity", :locals => {:activity => activity }
    %h6.all= link_to :see_all_activity.l, activities_path

.yui-u
  -box do 
    %h3=:tags.l
    - tag_cloud @popular_tags, %w(nube1 nube2 nube3 nube4 nube5) do |name, css_class|
      = link_to name, tag_path(URI.escape(name, /[\/.?#]/)), :class => css_class
    %p
      %form{"action"=>"/search/tags/", "method"=>"get"}
        %label{:style => "font-weight:bold;"}= :search_tag.l
        %br
        = text_field_tag 'id', params[:id], :autocomplete => "off"
        = auto_complete_field 'id', {:url => { :controller => "tags", :action => 'auto_complete_for_tag_name'}, :tokens => [','] }
        %input{"type"=>"submit", "value"=>:go.l, :class =>"btn loginbtn 1thickbox",:alt => "#TB_inline?height=320&width=300&inlineId=myOnPageContent"}
    %h6.all=link_to :all_tags.l, tags_path
