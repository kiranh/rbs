= form_for @group, :html => {:multipart => true} do |f|
  %p
    = f.error_messages
  %p
    = f.label :title, :title.l
    = f.text_field :title, :class => "textlarge"
  %p
    = f.label :description, :description.l
    %br/
    = f.text_area :description, :rows => 5, :cols => 100
  %p
    %label
      =:choose_a_logo_to_upload.l
    = f.file_field :logo, :size => "20"
  %p
    %br/
    = f.radio_button :public, "true", :checked => true
    = "Anyone can Join"
    %br/
    = f.radio_button :public, false
    = "To be Moderated"
  %p
    = f.submit

